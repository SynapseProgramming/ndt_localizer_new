<?xml version="1.0"?>
<launch>

    <!--imu and odometry-->
    <!-- Local EKF -->
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization">
        <rosparam command="load" file="$(find ndt_localizer)/cfgs/local_ekf.yaml" />
        <remap from="odometry/filtered" to="odom_filtered"/>
        <remap from="/set_pose" to="/set_pose_local"/>
    </node>

    <!-- Global EKF  -->
    <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization_global">
        <rosparam command="load" file="$(find ndt_localizer)/cfgs/global_ekf.yaml" />
        <remap from="odometry/filtered" to="amcl_pose_filtered"/>
        <param name="update_while_stopped" value="false"/>
        <param name="set_pose_offset_duration" value="10"/>
    </node>


</launch>